{
  "name": "onenote-desktop",
  "productName": "OneNote",
  "version": "2.2.2",
  "description": "OneNote Desktop Client for Linux",
  "productDescription": "OneNote.com wrapped in electron packaged for Linux",
  "main": "lib/",
  "scripts": {
    "start": "electron .",
    "dev": "tsc && electron .",
    "clean": "rimraf lib/ dist/ parts/ prime/ stage/ *.snap",
    "pack": "electron-builder --dir",
    "build": "npm run clean && tsc && electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anujdatar/onenote-desktop"
  },
  "bugs": {
    "url": "https://github.com/anujdatar/onenote-desktop/issues"
  },
  "homepage": "https://github.com/anujdatar/onenote-desktop#readme",
  "keywords": [
    "OneNote",
    "Electron",
    "Linux",
    "desktopApp",
    "Notes",
    "WebApp",
    "Scratchpad"
  ],
  "author": {
    "name": "Anuj Datar",
    "email": "anuj.datar@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.3.3",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "electron": "^25.8.1",
    "electron-builder": "^24.4.0",
    "eslint": "^8.44.0",
    "eslint-config-standard-with-typescript": "^36.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "dot-prop": "^8.0.1",
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "org.anuj.${name}",
    "asar": true,
    "copyright": "MIT Â©2022 Anuj Datar",
    "linux": {
      "category": "Notes;Office;Productivity",
      "packageCategory": "Notes;Office;Productivity",
      "description": "OneNote Desktop Client for Linux",
      "synopsis": "OneNote Desktop Client",
      "icon": "./assets/icon.icns",
      "target": [
        "dir",
        "snap",
        "deb",
        "appImage"
      ],
      "maintainer": "Anuj Datar <anuj.datar@gmail.com>",
      "artifactName": "${name}-${version}-${arch}.${ext}"
    },
    "deb": {
      "depends": [
        "gconf2",
        "gconf-service",
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3"
      ]
    },
    "snap": {
      "confinement": "strict",
      "grade": "stable"
    },
    "appImage": {
      "license": "LICENSE.md"
    }
  }
}
